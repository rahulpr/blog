<% if @post.comments.any? %>
	<hr />
	<h3>Comments</h3>
<% end %>

<% @post.comments.each do |c| %>
	<div class="well well-sm">
		<p>
			<%= link_to '[X]', [c.post, c], method: :delete, data: {confirm: 'Are you sure?'}, class: 'pull-right' %>
			<strong><%= c.username %></strong><br />
			<%= c.body %>
		</p>
	</div>
<% end %>